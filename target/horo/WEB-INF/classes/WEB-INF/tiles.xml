<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>

	<definition name="baseLayout" template="/pages/common/layout.jsp">
		<put-attribute name="title" value="Home" />
		<put-attribute name="header" value="/pages/common/header.jsp" />
		<put-attribute name="navigation" value="/pages/common/navigation.jsp" />
		<put-attribute name="footer" value="/pages/common/footer.jsp" />

		<put-list-attribute name="favicon">
			<add-attribute value="/image/icons/favicon.ico" />
		</put-list-attribute>

		<put-list-attribute name="stylesInherit">
			<add-attribute value="/style/bootstrap.css" />
			<add-attribute value="/style/font-awesome.css" />
			<add-attribute value="/style/zabuto_calendar.css" />
			<add-attribute value="/style/gritter/css/jquery.gritter.css" />
			<add-attribute value="/style/lineicons/style.css" />

		</put-list-attribute>
		<put-list-attribute name="styles" />
		<put-list-attribute name="scriptsInherit">
			<add-attribute value="/script/jquery.js" />
			<add-attribute value="/script/jquery-1.8.3.min.js" />
			<add-attribute value="/script/bootstrap.min.js" />
	<!-- <add-attribute value="/script/jquery.dcjqaccordion.2.7.js" /> -->
			<add-attribute value="/script/jquery.scrollTo.min.js" />
			<add-attribute value="/script/jquery.nicescroll.js" />
			<add-attribute value="/script/jquery.sparkline.js" />
			<add-attribute value="/script/common-scripts.js" />
			<add-attribute value="/script/gritter/js/jquery.gritter.js" />
			<add-attribute value="/script/gritter-conf.js" />
		</put-list-attribute>
		<put-list-attribute name="scripts" />
	</definition>

	<definition name="login" template="/pages/common/base.jsp">
		<put-attribute name="title" value="Login" />

		<put-attribute name="body" value="/pages/login.jsp" />
		<put-list-attribute name="favicon">
			<add-attribute value="/image/icons/favicon.ico" />
		</put-list-attribute>

		<put-list-attribute name="scripts" />
		<put-list-attribute name="scriptsInherit" inherit="true">
			<add-attribute value="/script/jquery.js" />
			<add-attribute value="/script/bootstrap.min.js" />
			<add-attribute value="/script/jquery.backstretch.min.js" />
		</put-list-attribute>
		<put-list-attribute name="styles" />
		<put-list-attribute name="stylesInherit">
			<add-attribute value="/style/bootstrap.css" />
			<add-attribute value="/style/font-awesome.css" />
			<add-attribute value="/style/style.css" />
			<add-attribute value="/style/style-responsive.css" />
		</put-list-attribute>
	</definition>

	<definition name="lock_screen" template="/pages/lock_screen.jsp">
		<put-attribute name="title" value="DH : lock Screen" />
		<put-list-attribute name="favicon">
			<add-attribute value="/image/icons/favicon.ico" />
		</put-list-attribute>
		<put-list-attribute name="styles" />
		<put-list-attribute name="stylesInherit">
			<add-attribute value="/style/bootstrap.css" />
			<add-attribute value="/style/font-awesome.css" />
			<add-attribute value="/style/style.css" />
			<add-attribute value="/style/style-responsive.css" />
		</put-list-attribute>
	</definition>

	<definition name="index" extends="baseLayout">
		<put-attribute name="title" value="DH : Welcome" />
		<put-attribute name="body" value="/pages/common/homePage.jsp" />
		<put-list-attribute name="styles">
			<add-attribute value="/style/style.css" />
			<add-attribute value="/style/style-responsive.css" />
		</put-list-attribute>
		<put-list-attribute name="scripts">
			<add-attribute value="/script/homePage.js" />
			<add-attribute value="/script/zabuto_calendar.js" />
		</put-list-attribute>
	</definition>

	<definition name="general" extends="baseLayout">
		<put-attribute name="title" value="DH : General" />
		<put-attribute name="body" value="/pages/UI-Element/general.jsp" />
		<put-list-attribute name="styles">
			<add-attribute value="/style/style.css" />
			<add-attribute value="/style/style-responsive.css" />
		</put-list-attribute>
		<put-list-attribute name="scripts">
			<add-attribute value="/script/UI-Element/general.js" />
			<add-attribute value="/script/gritter/js/jquery.gritter.js" />
			<add-attribute value="/script/gritter-conf.js" />
		</put-list-attribute>
	</definition>

	<definition name="panels" extends="baseLayout">
		<put-attribute name="title" value="DH : Panels" />
		<put-attribute name="body" value="/pages/UI-Element/panels.jsp" />
	</definition>

	<definition name="buttons" extends="baseLayout">
		<put-attribute name="title" value="DH : Buttons" />
		<put-attribute name="body" value="/pages/UI-Element/buttons.jsp" />
	</definition>

</tiles-definitions>