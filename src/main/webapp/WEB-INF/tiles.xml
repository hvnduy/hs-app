<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

	<definition name="baseLayout" template="/pages/common/layout.jsp">
		<put-attribute name="title" value="SivaLabs" />
		<put-attribute name="header" value="/pages/common/header.jsp" />
		<put-attribute name="leftSection" value="/pages/common/leftSection.jsp" />
		<put-attribute name="rightSection" value="/pages/common/rightSection.jsp" />
		<put-attribute name="footerSidebar" value="/pages/common/footerSidebar.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/pages/common/footer.jsp" />
				
		<put-list-attribute name="favicon">
			<add-attribute value="/image/icons/favicon.ico" />
		</put-list-attribute>
		
		<put-list-attribute name="stylesInherit">
			<add-attribute value="/style/bootstrap.css" />
			<add-attribute value="/style/font-awesome.css" />
			<add-attribute value="/style/zabuto_calendar.css" />
			<add-attribute value="/style/gritter/css/jquery.gritter.css"/>
			<add-attribute value="/style/lineicons/style.css"/>
			<add-attribute value="/style/style.css" />
			<add-attribute value="/style/style-responsive.css" />
			
<!-- 			<add-attribute value="/style/bootstrap-theme.min.css" /> -->
		</put-list-attribute>

		<put-list-attribute name="scriptsInherit">
			<add-attribute value="/script/jquery.js" />
			<add-attribute value="/script/jquery-1.8.3.min.js" />
			<add-attribute value="/script/bootstrap.min.js" />
			<add-attribute value="/script/jquery.scrollTo.min.js" />
			<add-attribute value="/script/jquery.dcjqaccordion.2.7.js" />
			<add-attribute value="/script/jquery.nicescroll.js" />
			<add-attribute value="/script/jquery.sparkline.js" />
			<add-attribute value="/script/gritter/js/jquery.gritter.js" />
			<add-attribute value="/script/gritter-conf.js" />
			<add-attribute value="/script/zabuto_calendar.js" />
			<add-attribute value="/script/common-scripts.js" />
			
		</put-list-attribute>
		<put-list-attribute name="scripts" />
	</definition>

	<definition name="login" extends="baseLayout">
		<put-attribute name="title" value="SivaLabs : Login" />
		<put-attribute name="navigation" value="" />
		<put-attribute name="body" value="/pages/login.jsp" />
	</definition>

	<definition name="welcome" extends="baseLayout">
		<put-attribute name="title" value="SivaLabs : Welcome" />
		<put-attribute name="body" value="/pages/welcome.jsp" />
	</definition>

</tiles-definitions>